
<ClickableGrid@ButtonBehavior+GridLayout>:
    rows: 1
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
        Rectangle:
            size: self.size
            pos: self.pos


<SettingsScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#35477d")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            id: friend_id_label
            font_size: 40
            text: "My Friend ID: "
            size_hint: 1, .1
            pos_hint: {"top": .8, "left": 1}
        ClickableGrid:
            spacing:10
            size_hint: .8, .2
            pos_hint: {"top": .6, "right": .9}
            on_release:
                app.change_screen("change_avatar_screen")
            Image:
                source: "icons/avatars/man.png"
            Label:
                text: "[u]Change Avatar[/u]"
                markup: True

        ClickableGrid:
            size_hint: .8, .2
            pos_hint: {"top": .35, "right": .9}

            ImageButton:
                source: "icons/add.png"

                on_release:
                    app.change_screen("add_friend_screen")
            LabelButton:
                text: "[u]ADD friend[/u]"
                markup: True
        ClickableGrid:
            size_hint: .8, .2
            pos_hint: {"top": .15, "right": .9}

            ImageButton:
                source: "icons/add.png"

                on_release:
                    app.change_screen("friends_list_screen")
            LabelButton:
                text: "[u]List friend[/u]"
                markup: True